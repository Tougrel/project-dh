{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"skipLibCheck": true,
		"removeComments": true,
		"strict": true,
		"allowJs": false,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"pretty": false,
		"paths": {
			"@main": ["src/index.ts"],
			"@lib/*": ["src/lib/*"],
			"@commands/*": ["src/commands/*"],
			"@events/*": ["src/events/*"]
		},
		"plugins": [{ "transform": "typescript-transform-paths" }]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
